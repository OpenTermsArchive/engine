{
  "services": {
    "declarationsPath": "../declarations/declarations"
  },
  "recorder": {
    "versions": {
      "storage": {
        "type": "git",
        "git": {
          "path": "./data/versions",
          "publish": false,
          "prefixMessageToSnapshotId": "This version was recorded after filtering snapshot in repository ./data/snapshots with commit ",
          "author": {
            "name": "Open Terms Archive Bot",
            "email": "bot@opentermsarchive.org"
          }
        }
      }
    },
    "snapshots": {
      "storage": {
        "type": "git",
        "git": {
          "path": "./data/snapshots",
          "publish": false,
          "author": {
            "name": "Open Terms Archive Bot",
            "email": "bot@opentermsarchive.org"
          }
        },
        "mongo": {
          "connectionURI": "mongodb://localhost:27017",
          "database": "open-terms-archive",
          "collection": "snapshots"
        }
      }
    }
  },
  "fetcher": {
    "waitForElementsTimeout": 10000,
    "navigationTimeout": 30000,
    "language": "en"
  },
  "logger": {
    "smtp": {
      "host": "smtp-relay.sendinblue.com",
      "username": "admin@opentermsarchive.org"
    },
    "sendMailOnError": false
  },
  "notifier": {
    "sendInBlue": {
      "updatesListId": 850,
      "updateTemplateId": 7
    }
  },
  "tracker": {
    "githubIssues": {
      "repository": "OpenTermsArchive/sandbox",
      "label": "bot-report",
      "color": "FEF2C0",
      "description": "Automatically created by Open Terms Archive when fetching error is encountered"
    }
  },
  "dataset": {
    "title": "sandbox",
    "versionsRepositoryURL": "https://github.com/OpenTermsArchive/sandbox"
  }
}
